// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id             String   @id
  Nome           String
  DataNascimento DateTime @db.Date
  Venda          Venda[]

  @@map("clientes")
}

model Produto {
  id            String @id
  Marca         String
  Classificacao String
  Nome          String
  TeorAlcoolico String
  Regiao        String
  PrecoAtual    Float
  Item          Item[]

  @@map("produtos")
}

model Venda {
  id        String   @id
  Cliente   Cliente  @relation(fields: [IdCliente], references: [id])
  IdCliente String
  Data      DateTime
  Item      Item[]

  @@map("vendas")
}

model Item {
  id            String  @id @default(uuid())
  Venda         Venda   @relation(fields: [IdVenda], references: [id])
  IdVenda       String
  Produto       Produto @relation(fields: [IdProduto], references: [id])
  IdProduto     String
  PrecoUnitario Float
  Quantidade    Int

  @@map("itens")
}
