{
  "compilerOptions": {
      "target": "es2017",                                
      "experimentalDecorators": true,                     
      "emitDecoratorMetadata": true,                     
      "module": "commonjs",
      "rootDir": "./",                              
      "baseUrl": "./src",                          
      "paths": {
          "@modules/*": ["modules/*"]
      },                                                  
      "resolveJsonModule": true,                        
      "esModuleInterop": true,                           
      "forceConsistentCasingInFileNames": true,         
      "skipLibCheck": true                                
  }
}
